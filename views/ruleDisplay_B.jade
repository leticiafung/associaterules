doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        title 关联规则挖掘
        link(href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet")
        link(href="../styles/ruleDisplay_b.css", rel="stylesheet")
    body
        header.container-fluid
            p.col-md-12 关联规则挖掘
        div.container-fluid
            div.row
                nav.col-md-2
                    ul.nav.nav-pills.nav-stacked.navbar-inverse
                        li
                            a 首页
                        li.active
                            a(href="#") 关联规则
                        li
                            a 根因图分析
                    div
                div.col-md-10.content
                    //no class"content"
                    div.row
                        p.col-md-10.col-md-offset-1.head_title  关联规则挖掘 > 关联规则
                        div.col-md-10.col-md-offset-1.formlist
                            #functionbox
                               .input_title
                                    h5 规则表格
                                    hr
                                - var head = ["xId","xName","xType","xSupport","yId","yName","yType","ySupport","xySupport","confidence","addition"]
                                - var a_rule = []
                                - var count = 0
                                mixin display(item)
                                    tr
                                        each key in item
                                            td #{key}
                                table#ruleDisplay.table.table-striped
                                    thead#btn
                                        tr
                                            each value in head
                                                th #{value}
                                    tbody#list
                                        each rule in rules
                                            - each val ,key in rule
                                                - if(count == 0)
                                                    - a_rule[2] = val
                                                - else if(count == 1)
                                                    - a_rule[0] = val
                                                - else if(count == 2)
                                                    - a_rule[6] = val
                                                - else if(count == 3)
                                                    - a_rule[8] = val
                                                - else if(count == 4)
                                                    - a_rule[4] = val
                                                - else if(count == 5)
                                                    - a_rule[9] = val
                                                - else if(count == 6)
                                                    - a_rule[5] = val
                                                - else if(count == 7)
                                                    - a_rule[1] = val
                                                - else if(count == 8)
                                                    - a_rule[3] = val
                                                - else if(count == 9)
                                                    - a_rule[7] = val
                                                - else
                                                    - a_rule[10] = val
                                                - count = count + 1
                                            - count = 0
                                            +display(a_rule)
                                 div
                                    a#loadbtn.btn.btn-primary.col-md-offset-2(href='/loadRule') 保存关联规则
                                    button#showgraph.btn.btn-primary.col-md-offset-3(type="button") 分析关联规则

        script(src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js", type="text/javascript")
        script(type="text/javascript", src='../scripts/ruleDisplay_b.js')



